<!doctype html>
<html lang="pt-br">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Todo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <header class="bg-dark">
        <nav class="navbar" data-bs-theme="dark">
            <span class="navbar-brand mb-0 h1">Todo</span>
            <div class="dropdown">
                <a class="btn btn-light dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    Menu
                </a>

                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="/">Tarefas</a></li>
                    <li><a class="dropdown-item" href="/create/task">Criar nova</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container mt-4">

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Título</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Prioridade</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < tasks.length; i++) { %>
                    <tr>
                        <td>
                            <%= i+1 %>
                        </td>
                        <td>
                            <%= tasks[i].title %>
                        </td>
                        <td>
                            <%= tasks[i].description %>
                        </td>
                        <td>
                            <%= tasks[i].priority %>
                        </td>
                        <td>
                            <%= tasks[i].status %>
                        </td>
                        <td>
                            <a href="/update/task/<%= tasks[i].id %>" class="link-dark">
                                <button class="btn btn-link link-dark">
                                    <i class="bi bi-pencil-fill"></i>
                                </button>
                            </a>
                        </td>
                        <td>
                            <form method="POST" action="/delete/task/">
                                <input type="hidden" name="id" value="<%= tasks[i].id %>">
                                <button class="btn btn-link link-dark">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>

</html>